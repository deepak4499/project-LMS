<div class="border mx-3 col-sm-10 col-xl-6 p-3 border-dark">
  <label for="bookname" class="col-sm-3">BookName</label><Input class="col-sm-6" @type="text" @id="bookname" @value={{bookName}}/>
  <label for="author" class="col-sm-3">Author</label><Input class="col-sm-6" @type="text" @id="author" @value={{author}}/>
  <label for="year" class="col-sm-3">YearOfPublication</label><Input class="col-sm-6" @type="number" @id="year" @value={{yearOfPublication}}/>
  <label for="rate" class="col-sm-3">Amount</label><Input class="col-sm-6" @type="number" @id="rate" @value={{rate}}/>
  <label for="describe" class="col-sm-3">Describtion</label><Input class="col-sm-6" @type="text" @id="describe" @value={{describtion}}/>
  <label for="count" class="col-sm-3">BookCount</label><Input class="col-sm-6" @type="text" @id="count" @value={{bookCount}}/><br><br>
  <center><button class="self-align-center col-sm-3" {{action "addbook"}}>Submit</button></center>
</div>
{{yield}}