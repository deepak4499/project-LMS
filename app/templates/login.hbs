<form class="col-sm-10 col-xl-6 mx-3 p-3 border border-primary">
  <h3 class="text-center">Login</h3>
  <br>
  <div>
    <label class="col-sm-3" for="user-id">UserName</label>
    <Input class="col-sm-6" type="text" id="user-id" @value={{userName}}/>
  </div>
  <br>
  <div>
    <label class="col-sm-3" for="pwd">Password</label>
    <Input class="col-sm-6" @type="password" @id="pwd" @value={{password}}/>
  </div>
  <br>
  <center><button {{action "login"}}>Submit</button></center>
</form>
{{outlet}}